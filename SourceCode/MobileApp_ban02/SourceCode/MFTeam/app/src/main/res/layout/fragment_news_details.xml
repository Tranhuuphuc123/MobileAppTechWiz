<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/newsCardDetails"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/newsImg"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:src="@drawable/flower1"
            android:layout_marginRight="20dp"
            />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/Theme.Card"
                android:id="@+id/newsBigTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hoa bỉ ngạn thường mọc ở đâu? Đặc điểm hoa bỉ ngạn"
                />

            <TextView
                style="@style/Theme.CardDetails"
                android:id="@+id/newsSmallTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hoa bỉ ngạn thường mọc ở đâu..."
                />
        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>



</androidx.cardview.widget.CardView>