<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--load cái custom_toolbar vào-->
        <include
            android:id="@+id/include"
            layout="@layout/custom_toolbar_products"/>

        <RelativeLayout
            android:id="@+id/relative_product_id"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#0DD60E64"
            tools:ignore="MissingConstraints">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                android:text="MFStores nơi cây giống tốt, Đặt trọn niềm tin"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textColor="@color/pink"
                android:textSize="20dp" />
        </RelativeLayout>

        <!--Mục 01 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_weight="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Alls"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View All"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:gravity="end"
                android:layout_weight="1"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_product1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" />

        <!--Mục 02 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_weight="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu Type"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View All"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:gravity="end"
                android:layout_weight="1"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_product_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"/>


        <!--Mục 03-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_weight="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Alls"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View All"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:gravity="end"
                android:layout_weight="1"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_product_product2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"/>


    </LinearLayout>
</androidx.core.widget.NestedScrollView>



