<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MFStore" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- màu mặc định. -->
        <item name="colorPrimary">@color/green</item>
        <item name="color">@color/red</item>
        <item name="colorPrimaryVariant">@color/pink</item>
        <item name="colorOnPrimary">@color/white</item>
        <!--màu phụ-->
        <item name="colorSecondary">@color/green_phoimau</item>
        <item name="colorSecondaryVariant">@color/blue1</item>
        <item name="colorOnSecondary">@color/black</item>

        <!--Màu trạng thái-->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.Button" parent="Base.Theme.MFStore">
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Card" parent="Base.Theme.MFStore">
        <item name="android:textSize">28dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.CardDetails" parent="Base.Theme.MFStore">
        <item name="android:textSize">21dp</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="Theme.MFStore" parent="Base.Theme.MFStore" />
</resources>