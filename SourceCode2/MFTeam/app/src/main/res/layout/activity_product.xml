<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--load cái custom_toolbar vào-->
        <include
            android:id="@+id/include"
            layout="@layout/custom_toolbar_products"/>

        <LinearLayout
            android:id="@+id/relative_product_id"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#0DD60E64"
            tools:ignore="MissingConstraints"
            android:orientation="vertical">
            <EditText
                android:id="@+id/search_box"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/search_box"
                android:hint="Please Search"
                android:textSize="20dp"
                android:paddingLeft="14dp"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/search_icon"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                android:text="MFStores Prestigious quality"
                android:textStyle="bold"
                android:textColor="@color/pink"
                android:textSize="20dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"/>
        </LinearLayout>

        <!--mục hiển thị ds search-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_searchList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" />

        <!--Mục 01 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_weight="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Alls"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View All"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:gravity="end"
                android:layout_weight="1"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_product1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" />

        <!--Mục 02 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_weight="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu Type"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View All"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:gravity="end"
                android:layout_weight="1"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_product_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"/>


        <!--Mục 03-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_weight="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Alls"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View All"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:gravity="end"
                android:layout_weight="1"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_product_product2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"/>


    </LinearLayout>
</androidx.core.widget.NestedScrollView>



